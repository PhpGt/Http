{
	"name": "phpgt/http",
	"description": "PSR-7 HTTP message implementation.",
	"license": "MIT",

	"require": {
		"php": ">=7.4",
		"phpgt/cookie": "1.*",
		"phpgt/input": "1.*",
		"phpgt/propfunc": "^v1.0.1",
		"psr/http-message": "^1.0.1",
		"willdurand/negotiation": "3.0.*"
	},
	"require-dev": {
		"phpunit/phpunit": "9.*",
		"phpstan/phpstan": ">=0.12.64"
	},

	"autoload": {
		"psr-4": {
			"Gt\\Http\\": "./src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Gt\\Http\\Test\\": "./test/unit"
		}
	},

	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/PhpGt"
		}
