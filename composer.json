{
	"name": "phpgt/http",
	"description": "PSR-7 HTTP message implementation.",
	"license": "MIT",

	"minimum-stability": "dev",

	"require": {
		"php": ">=8.0",
		"phpgt/cookie": "1.*",
		"phpgt/input": "1.*",
		"phpgt/promise": "^2.0",
		"phpgt/json": "dev-master",
		"psr/http-message": "^1.0.1",
		"willdurand/negotiation": "3.0.*"
	},
	"require-dev": {
		"phpunit/phpunit": "9.*",
		"phpstan/phpstan": ">=0.12.64"
	},

	"autoload": {
		"psr-4": {
			"Gt\\Http\\": "./src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Gt\\Http\\Test\\": "./test/phpunit"
		}
	},

	"keywords": [
		"http",
		"psr-7",
		"w3c",
		"request",
		"response",
		"uri",
		"url",
		"arraybuffer",
		"blob",
		"header"
	],

	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/PhpGt"
		}
	]
}
